{
  "name": "@andr-ii/cryl",
  "version": "0.3.1",
  "license": "MIT",
  "description": "A password encryption/decryption cli tool",
  "keywords": [
    "encryption",
    "password-encryption",
    "node.js",
    "cli"
  ],
  "author": "Andrii Lytovchenko <andr.lyt.dev@gmail.com>",
  "preferGlobal": true,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "cryl": "./bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:andr-ii/cryl.git"
  },
  "files": [
    "lib",
    "bin",
    "help"
  ],
  "scripts": {
    "build": "run-s build:lib build:bin",
    "build:lib": "tsc",
    "build:bin": "npsh bin 'default()'",
    "types": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,json,md,ts,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,json,md,ts,yml,yaml}'",
    "lint": "eslint --fix '**/*.ts'",
    "lint:check": "eslint '**/*.ts'",
    "spell": "cspell '**/*'",
    "svc": "npsh svc andr-ii cryl master",
    "hooks": "npsh hooks",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "cspell": "^6.8.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "npsh": "^2.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "publishConfig": {
    "@andr-ii:registry": "https://npm.pkg.github.com"
  }
}
